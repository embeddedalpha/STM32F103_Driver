#include <stdint.h>
#include "main.h"
#include "CAN.h"

CAN_Mailbox payload;

int main(void)
{
    MCU_Clock_Init();
    Delay_Config();
    CAN_Init(CAN_BAUDRATE_1000_KBPS);
    GPIO_Pin_Setup(GPIOC, 13, GEN_PUSH_PULL_OUTPUT);
	payload.Frame_Type = CAN_Frame_Data;
	payload.ID_Type = CAN_ID_Standard;
	payload.ID = 0x001;
	payload.data_length = 8;
	payload.data[0] = 1;
	payload.data[1] = 2;
	payload.data[2] = 3;
	payload.data[3] = 4;
	payload.data[4] = 5;
	payload.data[5] = 6;
	payload.data[6] = 7;
	payload.data[7] = 8;

	for(;;)
	{
		GPIOC -> BSRR |= GPIO_BSRR_BR13;
		CAN_Send_Payload(payload);
		GPIOC -> BSRR |= GPIO_BSRR_BS13;
		Delay_ms(100);
	}
}
