#ifndef _GPIO_H_
#define _GPIO_H_

#include "main.h"


#define GEN_PURPOSE_OUTPUT_PUSH_PULL	0b0011
#define GEN_PURPOSE_OUTPUT_OPEN_DRAIN	0b0111
#define ALT_FUNCTION_OUTPUT_PUSH_PULL	0b1011
#define ALT_FUNCTION_OUTPUT_OPEN_DRAIN	0b1111
#define INPUT_ANALOG                    0b0000
#define INPUT_FLOATING                  0b0100
#define INPUT_PULL_UP_DOWN              0b1000


void GPIO_Pin_Setup(GPIO_TypeDef *Port, uint8_t pin, uint8_t function);

void GPIO_Interrupt_Setup(int pin, int edge_select);

#endif
